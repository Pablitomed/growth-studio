# ================================================
# Growth Studio - Configuração de Deploy
# Copie este arquivo para .deploy.env e preencha
# ================================================

# VPS Configuration
VPS_IP=192.168.1.100
VPS_USER=root
VPS_KEY=~/.ssh/id_rsa
VPS_APP_PATH=/opt/growth-studio

# Application
APP_URL=https://growth.seudominio.com
NODE_ENV=production

# N8N Configuration
N8N_URL=https://n8n.seudominio.com
N8N_API_KEY=sua-api-key-secreta-aqui
N8N_USER=admin
N8N_PASS=sua-senha-segura

# GitHub (para CI/CD)
GITHUB_REPO=https://github.com/seu-usuario/growth-studio
GITHUB_TOKEN=ghp_xxxxx

# Database (SQLite - não precisa alterar)
DATABASE_URL=file:/app/data/growth-studio.db

# APIs Externas (opcional)
META_ACCESS_TOKEN=
GOOGLE_ADS_DEVELOPER_TOKEN=
TIKTOK_ACCESS_TOKEN=

# Notificações (opcional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
